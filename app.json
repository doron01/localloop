{
  "expo": {
    "name": "LocalLoop",
    "slug": "localloop",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "newArchEnabled": true,
    "plugins": [
      [
        "expo-location",
        {
          "locationWhenInUseUsageDescription": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ],
    "ios": {
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location when open to show your position on the map."
      }
    }
  }
}
